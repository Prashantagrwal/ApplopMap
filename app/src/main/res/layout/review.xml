<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:elevation="255dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place_count"
            />

        <LinearLayout
            android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/place_name"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="110"
                    android:gravity="center"
                    android:id="@+id/tv_1"
                    />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.1k"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="302"
                    android:gravity="center"
                    />


                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="400"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100"
                    android:gravity="center"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                >


                <com.like.LikeButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:icon_type="star"
                    app:circle_start_color="@color/colorPrimary"
                    app:like_drawable="@drawable/angry"
                    app:unlike_drawable="@drawable/angry"
                    app:dots_primary_color="@color/colorAccent"
                    app:dots_secondary_color="@color/colorPrimary"
                    app:circle_end_color="@color/colorAccent"
                    app:icon_size="32dp"
                    app:anim_scale_factor="3"
                    app:is_enabled="false"
                    android:layout_weight="1"
                    android:id="@+id/angry"
                    />

                <com.like.LikeButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:icon_type="star"
                    app:circle_start_color="@color/colorPrimary"
                    app:like_drawable="@drawable/sad"
                    app:unlike_drawable="@drawable/sad"
                    app:dots_primary_color="@color/colorAccent"
                    app:dots_secondary_color="@color/colorPrimary"
                    app:circle_end_color="@color/colorAccent"
                    app:icon_size="32dp"
                    app:anim_scale_factor="3"
                    app:is_enabled="false"
                    android:layout_weight="1"
                    android:id="@+id/b_sad"
                    />
                <com.like.LikeButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:icon_type="star"
                    app:circle_start_color="@color/colorPrimary"
                    app:like_drawable="@drawable/happy"
                    app:unlike_drawable="@drawable/happy"
                    app:dots_primary_color="@color/colorAccent"
                    app:dots_secondary_color="@color/colorPrimary"
                    app:circle_end_color="@color/colorAccent"
                    app:icon_size="32dp"
                    app:anim_scale_factor="3"
                    app:is_enabled="false"
                    android:layout_weight="1"
                    android:id="@+id/b_happy"
                    />
                <com.like.LikeButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:icon_type="star"
                    app:circle_start_color="@color/colorPrimary"
                    app:like_drawable="@drawable/good"
                    app:unlike_drawable="@drawable/good"
                    app:dots_primary_color="@color/colorAccent"
                    app:dots_secondary_color="@color/colorPrimary"
                    app:circle_end_color="@color/colorAccent"
                    app:icon_size="32dp"
                    app:anim_scale_factor="3"
                    app:is_enabled="false"
                    android:layout_weight="1"
                    android:id="@+id/b_good"
                    />
                <com.like.LikeButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:icon_type="star"
                    app:circle_start_color="@color/colorPrimary"
                    app:like_drawable="@drawable/loved_it"
                    app:unlike_drawable="@drawable/loved_it"
                    app:dots_primary_color="@color/colorAccent"
                    app:dots_secondary_color="@color/colorPrimary"
                    app:circle_end_color="@color/colorAccent"
                    app:icon_size="32dp"
                    app:anim_scale_factor="3"
                    app:is_enabled="false"
                    android:layout_weight="1"
                    android:id="@+id/b_loved_it"
                    />

            </LinearLayout>


</LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>